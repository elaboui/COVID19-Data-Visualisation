<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.nassimi.covid19_data_visualisation">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="me.nassimi.covid19_data_visualisation.VolleyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppBaseTheme">
        <activity android:name="me.nassimi.covid19_data_visualisation.MainActivity"></activity>
        <activity
            android:name="me.nassimi.covid19_data_visualisation.ui.WorldWideChartActivity"
            android:label="@string/title_activity_world_wide_chart"
            android:parentActivityName="me.nassimi.covid19_data_visualisation.MainActivity" />
        <activity android:name="me.nassimi.covid19_data_visualisation.SplashActivity"
            android:theme="@style/SplashTheme"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>