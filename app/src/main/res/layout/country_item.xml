<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:orientation="horizontal"
    android:paddingHorizontal="4dp"
    android:background="@drawable/rounded_item_row"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_height="58dp"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/totalCases_container"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:paddingHorizontal="8dp">
            <!--        Country Name    -->
            <TextView
                android:gravity="center_vertical"
                android:id="@+id/textView_CountryName"
                android:layout_height="match_parent"
                android:layout_weight="0.4"

                android:layout_width="0dp"
                android:text="@string/title_country"
                android:textColor="@color/textColorSecondary"
                android:textSize="14sp"
                android:textStyle="bold" />


            <!--            Confirmed       -->
            <LinearLayout
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:orientation="vertical">

                <TextView
                    android:gravity="center_horizontal"
                    android:id="@+id/textView_TotalConfirmed"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Confirmed"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <TextView
                    android:gravity="center_horizontal"
                    android:id="@+id/textView_NewConfirmed"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Confirmed"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <!--            Recovered -->
            </LinearLayout>

            <!--            Recovered       -->
            <LinearLayout
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:orientation="vertical">


                <TextView
                    android:gravity="center"
                    android:id="@+id/textView_TotalRecovered"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Recovered"
                    android:textColor="@color/colorRecovered"
                    android:textSize="14sp"
                    android:textStyle="normal" />


                <TextView
                    android:gravity="center"
                    android:id="@+id/textView_NewRecovered"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Recovered"
                    android:textColor="@color/colorRecovered"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!--            Deaths -->
            <LinearLayout
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:orientation="vertical">

                <TextView
                    android:gravity="center"
                    android:id="@+id/textView_TotalDeaths"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Deaths"
                    android:textColor="@color/colorDeathsLight"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <TextView
                    android:gravity="center"
                    android:id="@+id/textView_NewDeaths"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Deaths"
                    android:textColor="@color/colorDeathsLight"
                    android:textSize="12sp"
                    android:textStyle="bold" />


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
