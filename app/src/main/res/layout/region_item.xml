<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:orientation="horizontal"
    android:paddingHorizontal="4dp"
    android:background="@drawable/rounded_item_row"
    android:layout_marginBottom="8dp"
    >

    <!--        Country Name    -->
    <TextView
        android:id="@+id/textView_RegionName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:gravity="center_vertical"
        android:text="@string/title_country"
        android:textColor="@color/textColorSecondary"
        android:textSize="14sp"
        android:textStyle="bold" />


    <!--            Confirmed       -->


    <TextView
        android:id="@+id/textView_TotalConfirmed"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="0.2"
        android:gravity="center"
        android:text="Confirmed"
        android:textColor="@color/textColorSecondary"
        android:textSize="14sp"
        android:textStyle="normal" />

    <!--            Recovered       -->

    <TextView
        android:id="@+id/textView_TotalRecovered"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:gravity="center"
        android:text="Recovered"
        android:textColor="@color/colorRecovered"
        android:textSize="14sp"
        android:textStyle="normal" />


    <!--            Deaths -->

    <TextView
        android:id="@+id/textView_TotalDeaths"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:gravity="center"
        android:text="Deaths"
        android:textColor="@color/colorDeathsLight"
        android:textSize="14sp"
        android:textStyle="normal" />


</LinearLayout>

